{% extends 'base.html.twig' %}

{% block title %} {{ tab_type }} une formation {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/autocomplete.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    
    <div class="h5 my-4 text-center">Information concernant votre ancienne formation</div>

    <div class="col-12 col-mg-6 col-lg-5 mx-auto my-3">
        {% for message in app.flashes('warning') %}
            <div class="flash-notice bg-warning p-2 rounded mx-auto my-3 text-center">
                {{ message }}
            </div>
        {% endfor %}
        <div class="my-3">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-secondary mb-2 p-2 col-8 d-block mx-auto">
                    Enregistrer
                </button>
            {{ form_end(form) }}
        </div>
    </div>

</div>

{% endblock %}

{% block javascripts %}
    <script src="//code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="//code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <script src="{{ asset('js/autocomplete.js') }}"></script>
{% endblock %}

