{% extends 'base.html.twig' %}

{% block title %} {{ tab_type }} une alternance {% endblock %}

{% block body %}
<div class="container">

    <div class="col-12 col-mg-6 col-lg-5 mx-auto my-3">

        <div class="my-3">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-secondary mb-2 p-2 col-6 d-block mx-auto">
                    Ajouter cette alternance
                </button>
            {{ form_end(form) }}
        </div>
    </div>

</div>

{% endblock %}
